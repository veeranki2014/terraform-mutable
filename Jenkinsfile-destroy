pipeline{
  agent any

  parameters {
    choice(name: 'ACTION', choices: ['dev-destroy', 'prod-destroy'], description: 'Choose Environment')
  }
  stages{
    stage('Databases Destroy'){
      steps{
        sh '''
          cd databases
          make ${ACTION}
         '''
      }
    }
    stage('VPC Destroy'){
      steps{
        sh '''
          cd vpc
          make ${ACTION}
         '''
      }
    }
  }
}